<h2>New exercise group</h2>

<% form_for([@course, @ci, @eg]) do |f| %>
    <p>
    <%= f.label :time %>
    <%= f.text_field :time %>
    </p>

    <p>
    <%= f.label :location %>
    <%= f.text_field :location%>
    </p>

    <p>
    <%= f.label :attendee_limit %>
    <%= f.text_field :attendee_limit%>
    </p>

    <p>
    <%= f.submit "Create" %>
    </p>
<% end %>

<%= link_to 'Back', course_course_instance_path(@course, @ci) %>
