<h1>Editing course</h1>

<% form_for(@course) do |f| %>
    <%= f.error_messages %>

    <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
    </p>

    <p>
    <%= f.label :description %>
    <%= f.text_field :description, :rows => 6 %>
    </p>

    <p>
    <%= f.submit "Update" %>
    </p>
<% end %>

<%= link_to 'Show', @course %> |
<%= link_to 'Back', courses_path %>
