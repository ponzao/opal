<h2>New course</h2>

<% form_for(@course, :html => {:class => 'validate'}) do |f| %>
  <%= f.error_messages %>

  <p>
  <%= f.label :name %>
  <%= f.text_field :name %>
  </p>

  <p>
  <%= f.label :description %>
  <%= f.text_area :description, :rows => 6 %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', courses_path %>
