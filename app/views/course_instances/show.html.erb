<h2><%= @ci.course.name %> - <%= @ci.name %></h2>
<p>
<%= @ci.description %>
<ul>
    <% @ci.exercise_groups.each do |eg| %>
        <li><%= link_to eg.time,
            course_course_instance_exercise_group_url(@ci.course, @ci, eg) %></li>
