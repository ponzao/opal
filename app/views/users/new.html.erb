<h2>Registration form</h2>
<% form_for(@user, :html => {:class => 'validate'}) do |f| %>
  <%= f.error_messages %>

  <p>
  <%= f.label :username %>
  <%= f.text_field :username %>
  </p>

  <p>
  <%= f.label :password %>
  <%= f.password_field :password %>
  </p>

  <p>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>
